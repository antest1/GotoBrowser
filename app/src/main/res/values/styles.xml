<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="switchPreferenceCompatStyle">@style/MaterialSwitchPreferenceCompat</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        -->
    </style>

    <style name="MaterialSwitchPreferenceCompat" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_switch</item>
    </style>

    <style name="CustomMaterialSwitchStyle">
        <item name="thumbTint">@color/mt3_switch_thumb</item>
        <item name="trackTint">@color/mt3_switch_track</item>
        <item name="trackDecorationTint">@color/mt3_switch_track_decoration</item>
    </style>

</resources>
